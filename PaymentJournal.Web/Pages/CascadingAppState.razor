<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private AppState _appState = new();

    public AppState State
    {
        get => _appState;
        set
        {
            _appState = value;
            StateHasChanged();
        }
    }
}